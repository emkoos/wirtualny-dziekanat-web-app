@model StudentDTO
@{
    ViewBag.Title = "Tworzenie studenta";
}

<h1>@ViewBag.Tile</h1>

<div class="row">
    <div class="form-group">@TempData["message_fail"]</div>
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName">Imię</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName">Nazwisko</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Płeć</label>
                <input asp-for="Gender" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AlbumNr">Nr Albumu</label>
                        <input asp-for="AlbumNr" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pesel">Pesel</label>
                        <input asp-for="Pesel" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayDate">Data urodzenia (Format: dd.mm.rrrr)</label>
                <input asp-for="BirthdayDate" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address">Adres</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz konto studentowi" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
