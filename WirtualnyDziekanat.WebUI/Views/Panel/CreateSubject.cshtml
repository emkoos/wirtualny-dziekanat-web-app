@model SubjectDTO
@{
    ViewBag.Title = "Tworzenie przedmiotu";
}

<h1>@ViewBag.Tile</h1>

<div class="row">
    <div class="form-group">@TempData["message_fail"]</div>
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name">Nazwa</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Opis">Opis</label>
                        <input asp-for="Opis" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
