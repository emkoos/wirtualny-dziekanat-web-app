@model IEnumerable<SubjectDTO>
@{
    ViewData["Title"] = "Lista przedmiotów";
    <link href="~/node_modules/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
}

<h1>@ViewData["Title"]</h1>

<div class="well">
    <div class="form-group">
        <input type="button" value="Dodaj przedmiot" onclick="location.href='@Url.Action("CreateSubject", "Panel")'" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Opcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Opis</td>
                    <td>
                        <a class="nav-link text-dark" asp-controller="Panel" asp-action="EditSubject" asp-route-id="@s.ID"><i class="bi bi-pencil-square"></i></a>
                        <a onclick="return confirm('Czy jesteś pewien usunięcia przedmiotu?')" class="nav-link text-dark" asp-controller="Panel" asp-action="DeleteSubject" asp-route-id="@s.ID"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
