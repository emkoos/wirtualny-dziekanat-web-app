@model IEnumerable<StudentDTO>
@{
    ViewData["Title"] = "Lista studentów";
}

<h1>@ViewData["Title"]</h1>

<div class="well">
    <div class="form-group">
        <input type="button" value="Dodaj studenta" onclick="location.href='@Url.Action("CreateStudent", "Panel")'" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Numer albumu</th>
                <th>Email</th>
                <th style="width: 36px;">Opcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.FirstName</td>
                    <td>@s.LastName</td>
                    <td>@s.AlbumNr</td>
                    <td>@s.Email</td>
                    <td>
                        <a href="user.html"><i class="icon-pencil"></i></a>
                        <a href="#myModal" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
