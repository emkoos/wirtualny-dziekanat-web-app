@model IEnumerable<StudentDTO>
@{
    ViewData["Title"] = "Lista studentów";
    <link href="~/node_modules/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
}

<h1>@ViewData["Title"]</h1>

<div class="well">
    <div class="form-group">
        <input type="button" value="Dodaj studenta" onclick="location.href='@Url.Action("CreateStudent", "Panel")'" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Numer albumu</th>
                <th>Email</th>
                <th style="width: 36px;">Opcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.FirstName</td>
                    <td>@s.LastName</td>
                    <td>@s.AlbumNr</td>
                    <td>@s.Email</td>
                    <td>
                        <a class="nav-link text-dark" asp-controller="Panel" asp-action="EditStudent" asp-route-id="@s.ID"><i class="bi bi-pencil-square"></i></a>
                        <a onclick="return confirm('Czy jesteś pewien usunięcia studenta?')" class="nav-link text-dark" asp-controller="Panel" asp-action="DeleteStudent" asp-route-id="@s.ID"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
