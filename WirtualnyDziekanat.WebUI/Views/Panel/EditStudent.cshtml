@model StudentDTO
@{
    ViewData["Title"] = "Edytuj studenta";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="form-group">@TempData["message_fail"]</div>
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName">Imię</label>
                        <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName">Nazwisko</label>
                        <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender">Płeć</label>
                        <input asp-for="Gender" class="form-control" placeholder="@Model.Gender" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AlbumNr">Nr Albumu</label>
                            <input asp-for="AlbumNr" class="form-control" placeholder="@Model.AlbumNr" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="@Model.Email" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address">Adres</label>
                        <input asp-for="Address" class="form-control" placeholder="@Model.Address" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Zaktualizuj" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
